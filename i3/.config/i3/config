# Assign particular applications to their workspaces
assign [class="Firefox"] $ws4
#assign [class="Google-chrome"] $ws5
assign [class="rviz"] $ws5
assign [class="Code"] $ws6

# Some windows are best floating
for_window [class="Tk" ] floating enable
for_window [title="DebuggerTerminal"] floating enable
for_window [class="Matplotlib"] floating enable

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Lock screen
bindsym $mod+l exec ~/.config/i3/i3exit.sh lock
# exec_always $psst xautolock -time 5 -locker '~/.config/i3/i3exit.sh lock'

# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
set $mode_exit     [L]ock        Lo[g]out        Slee[p]        [R]eboot        [S]hutdown
bindsym $mod+Shift+e mode "$mode_exit"
mode "$mode_exit" {
    bindsym l exec $psst ~/.config/i3/i3exit.sh lock, mode "default"
    bindsym g exec $psst ~/.config/i3/i3exit.sh logout, mode "default"
    bindsym p exec $psst ~/.config/i3/i3exit.sh suspend, mode "default"
    bindsym r exec $psst ~/.config/i3/i3exit.sh reboot, mode "default"
    bindsym s exec $psst ~/.config/i3/i3exit.sh poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Move the current workspace to the monitor on the right
bindsym $mod+m move workspace to output right
# or to the left
bindsym $mod+Shift+m move workspace to output left


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top

        # Keep the bar hidden. Show only when Alt is pressed
        mode hide
        hidden_state hide
        modifier Mod1

        status_command i3status --config ~/.config/i3/i3status.conf
        #status_command i3status
        tray_output primary
}

# Desktop "rice"
exec_always $psst feh --bg-fill ~/Pictures/wallpapers/current-wallpaper.jpg


